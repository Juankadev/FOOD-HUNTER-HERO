<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".views.ui.hunter.Hunter_VerArticulo" >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="342dp"
            android:layout_height="655dp">

            <TextView
                android:id="@+id/tvStockDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="64dp"
                android:text="Categoria:"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/tvCategoriaArtTitle2"
                app:layout_constraintTop_toBottomOf="@+id/tvMarcaArtTitle" />

            <TextView
                android:id="@+id/tv_cantidadItem"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/btnAgregarCarrito"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCategoriaArt"
                app:layout_constraintVertical_bias="0.645" />

            <ImageView
                android:id="@+id/ivArticulo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />


            <Button
                android:id="@+id/btnAgregarCarrito"
                android:layout_width="243dp"
                android:layout_height="51dp"
                android:layout_marginTop="336dp"
                android:backgroundTint="@color/bck_green"
                android:drawableLeft="@drawable/baseline_add_shopping_cart_24"
                android:text="@string/agregar_carrito"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivArticulo" />

            <TextView
                android:id="@+id/tvDescripcionArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcion"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/tvPrecioArt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivArticulo" />

            <TextView
                android:id="@+id/tvPrecioArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:text="@string/precio"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.18"
                app:layout_constraintStart_toEndOf="@+id/tvPrecioArtTitle"
                app:layout_constraintTop_toBottomOf="@+id/ivArticulo" />

            <TextView
                android:id="@+id/tvPrecioArtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="32dp"
                android:text="Precio:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDescripcionArt" />

            <TextView
                android:id="@+id/tvMarcaArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:text="Marca"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/tvMarcaArtTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvPrecioArt" />

            <TextView
                android:id="@+id/tvMarcaArtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="24dp"
                android:text="Marca:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPrecioArtTitle" />

            <TextView
                android:id="@+id/tvCategoriaArt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="124dp"
                android:text="Categoria"
                android:textAlignment="viewStart"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/tvCategoriaArtTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvMarcaArt" />

            <TextView
                android:id="@+id/tvCategoriaArtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="28dp"
                android:text="Categoria:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMarcaArtTitle" />

            <TextView
                android:id="@+id/tvCategoriaArtTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginTop="64dp"
                android:text="Stock:"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMarcaArtTitle" />

            <Button
                android:id="@+id/btnRestarItem"
                android:layout_width="59dp"
                android:layout_height="63dp"
                android:layout_marginTop="52dp"
                android:text="-"
                app:layout_constraintEnd_toStartOf="@+id/tv_cantidadItem"
                app:layout_constraintHorizontal_bias="0.561"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCategoriaArt" />

            <Button
                android:id="@+id/btnSumarItem"
                android:layout_width="59dp"
                android:layout_height="63dp"
                android:layout_marginTop="48dp"
                android:text="+"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.603"
                app:layout_constraintStart_toEndOf="@+id/tv_cantidadItem"
                app:layout_constraintTop_toBottomOf="@+id/tvCategoriaArt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>