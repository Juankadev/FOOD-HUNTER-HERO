<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgComercio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <EditText
            android:id="@+id/et_razonSocial_mc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:backgroundTint="#68dd6b"
            android:ems="10"
            android:inputType="text"
            android:padding="10dp"
            android:text="@string/input_razonsocial_rc"
            android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/et_rubro_mc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_marginTop="15dp"
        android:backgroundTint="#68dd6b"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:text="@string/input_rubro_rc"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/et_correo_mc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:backgroundTint="#68dd6b"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:text="@string/input_email_r"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/et_telefono_mc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:backgroundTint="#68dd6b"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:text="@string/input_telefono_r"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/et_direccion_mc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/border"
        android:backgroundTint="#68dd6b"
        android:ems="10"
        android:inputType="text"
        android:padding="10dp"
        android:text="@string/input_direccion_r"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2400FF"
        android:layout_marginTop="15dp"
        android:text="@string/hunter_micuenta_btn_editar" />

        <Button
            android:id="@+id/btn_back_menu"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#FF0000"
            android:text="@string/comercio_micuenta_btn_eliminar"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_back_menu3"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#B6B6B6"
            android:text="Volver"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>