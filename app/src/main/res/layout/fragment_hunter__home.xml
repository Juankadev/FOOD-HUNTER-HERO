<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ui.hunter.Hunter_Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Barra de búsqueda -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="#68dd6b"
                android:backgroundTint="#68dd6b"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_browser"
                    android:layout_width="311dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:backgroundTint="#8DCA8F"
                    android:backgroundTintMode="add"
                    android:drawableStart="@drawable/baseline_search_20"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="@string/buscar"
                    android:inputType="text"
                    android:padding="15dp"
                    android:textColor="#000000" />

            </LinearLayout>

            <!-- Sección de comercios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/comercio"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- GridView de comercios -->
            <ProgressBar
                android:id="@+id/pbComercios"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="104dp" />

            <GridView
                android:id="@+id/gv_comercios_hunter_home"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#FFFFFF"
                android:horizontalSpacing="8dp"
                android:numColumns="3"
                android:verticalSpacing="8dp"
                android:visibility="gone" />

            <!-- Botón Ver -->
            <Button
                android:id="@+id/btn_mas_comercios_hunter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:text="@string/btn_VerMas"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Título de productos -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/productos"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- GridView de productos -->
            <ProgressBar
                android:id="@+id/pbArticulos"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="104dp" />

            <GridView
                android:id="@+id/gv_productos_hunter_home"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#FFFFFF"
                android:horizontalSpacing="8dp"
                android:numColumns="3"
                android:verticalSpacing="8dp"
                android:visibility="gone">

            </GridView>

            <!-- Botón Ver -->
            <Button
                android:id="@+id/btn_mas_articulos_hunter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:text="@string/btn_VerMas"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
