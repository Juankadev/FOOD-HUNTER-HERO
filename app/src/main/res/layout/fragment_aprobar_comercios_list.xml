<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_aprobar_comercios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:textAlignment="center"
    tools:context=".views.ui.admin.AprobarComercios">

    <TextView
        android:id="@+id/tvAprobar"
        android:layout_width="378dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:text="Comercios a aprobar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNoData"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        android:text="No hay informaciÃ³n disponible"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#272727"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAprobar" />

    <GridView
        android:id="@+id/gv_comercios"
        android:layout_width="381dp"
        android:layout_height="707dp"
        android:numColumns="2"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="30dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNoData">

    </GridView>
</androidx.constraintlayout.widget.ConstraintLayout>