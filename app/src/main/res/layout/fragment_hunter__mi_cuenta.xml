<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68dd6b"
    tools:context=".views.ui.hunter.Hunter_MiCuenta">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#68dd6b"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/indicaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/micuenta"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mis Puntos"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtMisPuntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Rango"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtRango"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/bck_inputs"
                android:ems="10"
                android:enabled="false"
                android:hint="@string/input_nombre_rh"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="10dp"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/et_apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/bck_inputs"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@string/input_apellido_rh"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/et_fechanacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/bck_inputs"
                android:ems="10"
                android:enabled="false"
                android:inputType="date"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@string/input_fechanacimiento_rh"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/et_telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/bck_inputs"
                android:ems="10"
                android:enabled="false"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@string/input_telefono_r"
                android:textColor="#FFFFFF" />

            <Spinner
                android:id="@+id/spinner_sexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/border_with_arrow"
                android:backgroundTint="@color/bck_inputs"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@string/input_sexo_rh"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/et_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/bck_inputs"
                android:ems="10"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@string/input_email_r"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/et_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/bck_inputs"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="10dp"
                android:text="@string/input_direccion_r"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_editInformacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#2400FF"
                android:text="@string/hunter_micuenta_btn_editar" />

            <Button
                android:id="@+id/btn_edit_actioner"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="#2400FF"
                android:text="Editar"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_actioner_edit"
                android:layout_width="160dp"
                android:layout_height="36dp"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:cardBackgroundColor="#2400FF"
                app:cardCornerRadius="18dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:id="@+id/progressbarEditar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/txtEditarActioner"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtEditarActioner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Editar"
                        android:textColor="@color/white" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_deleteaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="#FF0000"
                android:text="@string/comercio_micuenta_btn_eliminar"
                android:textColor="#FFFFFF" />


            <!-- <Button
            android:id="@+id/btn_back_to_home"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#B6B6B6"
            android:text="@string/btn_volver"
            android:textColor="#FFFFFF" /> -->

            <Button
                android:id="@+id/btn_Cancel_Edit"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="#B6B6B6"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
