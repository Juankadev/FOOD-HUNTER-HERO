<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ui.commerce.AgregarArticulo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewArticulo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/txtDescripcionArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:backgroundTint="#75FFFFFF"
            android:ems="10"
            android:hint="DescripciÃ³n"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtPrecioArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:backgroundTint="#75FFFFFF"
            android:ems="10"
            android:hint="Precio"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtFechaVencimientoStockInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:backgroundTint="#75FFFFFF"
            android:ems="10"
            android:inputType="date"
            android:padding="10dp"
            android:hint="Fecha de Vencimiento"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/txtCantidadStockInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:backgroundTint="#75FFFFFF"
            android:ems="10"
            android:hint="Cantidad"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <Spinner
            android:id="@+id/spinnerIDCategoriaArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:backgroundTint="#75FFFFFF"
            android:padding="10dp"
            android:hint="Categoria (DropDownList)"
            android:textColor="#FFFFFF" />

        <Spinner
            android:id="@+id/spinnerIDMarcaArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:backgroundTint="#75FFFFFF"
            android:padding="10dp"
            android:hint="Marca (DropDownList)"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnAgregarArticulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:text="Agregar Articulo" />

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="#B6B6B6"
            android:text="@string/btn_volver"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</FrameLayout>
